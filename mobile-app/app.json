{
  "expo": {
    "name": "AirTouch",
    "slug": "airtouch",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#030712"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.airtouch.app"
    },
    "android": {
      "package": "com.airtouch.app",
      "versionCode": 3,
      "icon": "./assets/icon.png",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "允许 AirTouch 使用相机扫描二维码"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "abiFilters": ["arm64-v8a"]
          }
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "44dca00a-e921-47c3-be7b-397cb37e4604"
      }
    }
  }
}
